<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simple Starting Sample</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Simple Starting Sample", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    <!-- Dropdown Menu -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="peopleDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            List of People
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="peopleDropdown">
                            <li><a class="dropdown-item" href="../People/ListPeople">COMPLETE LIST</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Sumed.html">Sumed</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Kesivan.html">Kesivan</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Lily.html">Lily</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Marques.html">Marques</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Ethan.html">Ethan</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Ensure Bootstrap's JavaScript is loaded -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

